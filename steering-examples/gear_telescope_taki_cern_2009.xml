<gear>
    <!-- 


    GEAR file generated for the 2009 CERN test beam campain. It assumes a telescope made
    of 6 MimoTels sensors with different epi thickness and a taki DUT.

    The size of the sensors have been already corrected for the 7.7 bug.

    The origin of the telescope frame of reference is in the middle of the DUT allocated space. 
    
	The interdistance in between the two arms (DUT allocated space) has been increased by 60 mm
	with respect v1.1. The left arm is left unchanged, while the planes in the right arm are all
	moved down the beam of 60 mm. The distance of the boxes was then increased to 35.925 cm when taki
        was a DUT.

        The sensor thickness was taken into account and the planes were moved by this value.
	
    Author: Joerg Behr <joerg.behr@desy.de>
    Date:   09/09/2009
   
    -->
    
	<global detectorName="EUTelescope" />
    <BField type="ConstantBField" x="0.0" y="0.0" z="0.0"/>
    <detectors>
        <detector name="SiPlanes" geartype="SiPlanesParameters">
            <siplanesID ID="32" />
            <siplanesType type="TelescopeWithDUT" />
            <siplanesNumber number="6" />
            
	    <dut> <!-- z position is uncorrect and must be adjusted! -->
                    <dut_ladder ID="6" 
                    positionX="0.000000" positionY="0.000000" positionZ="200.000" 
                    sizeX="2.68800" sizeY="0.67200" thickness="0.80000" 
                    radLength="93.660734" />
                    
                    <dut_sensitive ID="6" positionX="0.000000"
                    positionY="0.000000" positionZ="200.000"
                    sizeX="2.688000" sizeY="0.6720" thickness="0.8000"
                    npixelX="128" npixelY="128" pitchX="0.021000"
                    pitchY="0.021000" pitchY1="0.021000" pitchY2="0.021000"  
                    resolution="0.003000" rotation1="1.000000" rotation2="0.000000"
                    rotation3="0.000000" rotation4="1.000000"
                    radLength="93.660734" />
            </dut>

            <layers>
              
              <!-- PLANE 0 --> 
                <layer>
                  <ladder ID="0" positionX="0.000000" positionY="0.000000" 
					positionZ="-308.81400000" sizeX="7.680000" sizeY="7.680000" thickness="0.686000" radLength="93.660734" />
					
                  <!-- CHIP 45: 20 um -->
                  <sensitive ID="0" positionX="0.000000" positionY="0.000000" positionZ="-308.81400000" sizeX="7.680000"
					sizeY="7.680000" thickness="0.020000" npixelX="256" npixelY="256" pitchX="0.030000" pitchY="0.030000"
					resolution="0.003000" rotation1="1.000000" rotation2="0.000000" rotation3="0.000000" rotation4="-1.000000"
					radLength="93.660734" />
                </layer>

                <!-- PLANE 1 --> 
                <layer>
                  <ladder ID="1" positionX="0.000000" positionY="0.000000" 
					positionZ="-208.81400000" sizeX="7.680000" sizeY="7.680000" thickness="0.686000" radLength="93.660734" />

                  <!-- CHIP 38: 14 um -->
                  <sensitive ID="1" positionX="0.000000" positionY="0.000000" positionZ="-208.81400000" sizeX="7.680000"
					sizeY="7.680000" thickness="0.014000" npixelX="256" npixelY="256" pitchX="0.030000" pitchY="0.030000"
					resolution="0.003000" rotation1="1.000000" rotation2="0.000000" rotation3="0.000000" rotation4="-1.000000"
					radLength="93.660734" />
                </layer>

                <!-- PLANE 2 --> 
                <layer>
                    <ladder ID="2" positionX="0.000000" positionY="0.000000" 
						positionZ="-108.81400000" sizeX="7.680000" sizeY="7.680000" thickness="0.686000" radLength="93.660734" />

                  <!-- CHIP 37: 14 um -->
                  <sensitive ID="2" positionX="0.000000" positionY="0.000000" positionZ="-108.81400000" sizeX="7.680000"
					sizeY="7.680000" thickness="0.014000" npixelX="256" npixelY="256" pitchX="0.030000" pitchY="0.030000"
					resolution="0.003000" rotation1="1.000000" rotation2="0.000000" rotation3="0.000000" rotation4="-1.000000"
					radLength="93.660734" />
                </layer>

                <!-- 
                     Here is the DUT BOX
                --> 

                <!-- PLANE 3 --> 
                <layer>
                  <ladder ID="3" positionX="0.000000" positionY="0.000000" 
					positionZ="269.06400000" sizeX="7.680000" sizeY="7.680000" thickness="0.686000" radLength="93.660734" />

                  <!-- CHIP 17: 20 um -->
                  <sensitive ID="3" positionX="0.000000" positionY="0.000000" positionZ="269.06400000" sizeX="7.680000" 
					sizeY="7.680000" thickness="0.020000" npixelX="256" npixelY="256" pitchX="0.030000" pitchY="0.030000"
					resolution="0.003000" rotation1="-1.000000" rotation2="0.000000" rotation3="0.000000" rotation4="-1.000000"
					radLength="93.660734" />
                </layer>

                <!-- PLANE 4 --> 
                <layer>
                  <ladder ID="4" positionX="0.000000" positionY="0.000000" 
					positionZ="369.064000" sizeX="7.680000" sizeY="7.680000" thickness="0.686000" radLength="93.660734" />
                  
				  <!-- CHIP 18: 20 um -->
                  <sensitive ID="4" positionX="0.000000" positionY="0.000000" positionZ="369.06400000" sizeX="7.680000" 
					sizeY="7.680000" thickness="0.020000" npixelX="256" npixelY="256" pitchX="0.030000" pitchY="0.030000"
					resolution="0.003000" rotation1="-1.000000" rotation2="0.000000" rotation3="0.000000" rotation4="-1.000000"
					radLength="93.660734" />
                </layer>

                <!-- PLANE 5 --> 
                <layer>
                  <ladder ID="5" positionX="0.000000" positionY="0.000000" positionZ="469.064000" 
					sizeX="7.680000" sizeY="7.680000" thickness="0.686000" radLength="93.660734" />
                  
				  <!-- CHIP 20: 20 um  (the blob chip!) -->
                  <sensitive ID="5" positionX="0.000000" positionY="0.000000" positionZ="469.0640000" sizeX="7.680000" 
					sizeY="7.680000" thickness="0.020000" npixelX="256" npixelY="256" pitchX="0.030000" pitchY="0.030000"
					resolution="0.003000" rotation1="-1.000000" rotation2="0.000000" rotation3="0.000000" rotation4="-1.000000"
					radLength="93.660734" />
                </layer>
            </layers>
        </detector>
    </detectors>
</gear>
