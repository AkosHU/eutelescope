					sizeY="7.680000" thickness="0.020000" npixelX="256" npixelY="256" pitchX="0.030000" pitchY="0.030000"
					resolution="0.003000" rotation1="1.000000" rotation2="0.000000" rotation3="0.000000" rotation4="-1.000000"
